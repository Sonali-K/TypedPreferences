<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="info.metainfo.typedpreferences.demo.MainActivity">

    <!-- Stored information -->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Widget.TextView"
                android:textColor="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/android_version_text_label"
                android:textSize="@dimen/text_view_text_size"/>

        <TextView
                android:id="@+id/android_version_text_view"
                android:text="@string/android_version_default_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_view_text_size"/>

    </LinearLayout>

    <!-- User input -->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/android_version_edit_text"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/android_version_edit_text_hint"/>

        <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit_button_title"
                android:layout_weight="0"/>
    </LinearLayout>

</LinearLayout>
